<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_items_root"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/game_item_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_shape_rounded"
        android:src="@drawable/ic_default_item"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.156" />

    <ImageView
        android:id="@+id/game_item_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_2"
        android:background="@drawable/bg_shape_rounded"
        android:src="@drawable/ic_default_item"
        app:layout_constraintBottom_toBottomOf="@id/game_item_1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/game_item_1"
        app:layout_constraintTop_toTopOf="@id/game_item_1" />

    <ImageView
        android:id="@+id/game_item_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_2"
        android:background="@drawable/bg_shape_rounded"
        android:src="@drawable/ic_default_item"
        app:layout_constraintBottom_toBottomOf="@id/game_item_2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/game_item_2"
        app:layout_constraintTop_toTopOf="@id/game_item_2" />

    <ImageView
        android:id="@+id/game_item_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_2"
        android:background="@drawable/bg_shape_rounded"
        android:src="@drawable/ic_default_item"
        app:layout_constraintBottom_toBottomOf="@id/game_item_3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/game_item_3"
        app:layout_constraintTop_toTopOf="@id/game_item_3" />

    <ImageView
        android:id="@+id/game_item_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_2"
        android:background="@drawable/bg_shape_rounded"
        android:src="@drawable/ic_default_item"
        app:layout_constraintBottom_toBottomOf="@id/game_item_4"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/game_item_4"
        app:layout_constraintTop_toTopOf="@id/game_item_4" />

    <ImageView
        android:id="@+id/game_item_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_2"
        android:background="@drawable/bg_shape_rounded"
        android:src="@drawable/ic_default_item"
        app:layout_constraintBottom_toBottomOf="@id/game_item_5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/game_item_5"
        app:layout_constraintTop_toTopOf="@id/game_item_5" />

</androidx.constraintlayout.widget.ConstraintLayout>