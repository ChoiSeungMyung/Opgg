<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/spells_first"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_shape_rounded"
        android:scaleType="fitXY"
        android:src="@drawable/ic_default_item"
        app:layout_constraintBottom_toTopOf="@id/guide_line_first"
        app:layout_constraintEnd_toStartOf="@id/guide_row_first"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/spells_second"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_shape_rounded"
        android:scaleType="fitXY"
        android:src="@drawable/ic_default_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide_row_first"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guide_line_second" />

    <ImageView
        android:id="@+id/perk_first"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_shape_oval"
        android:scaleType="fitXY"
        android:src="@drawable/ic_default_item"
        app:layout_constraintBottom_toTopOf="@id/guide_line_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guide_row_second"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/perk_second"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_shape_oval"
        android:scaleType="fitXY"
        android:src="@drawable/ic_default_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guide_row_second"
        app:layout_constraintTop_toBottomOf="@id/guide_line_second" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.475" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.48" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_row_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.475" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_row_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.48" />
</androidx.constraintlayout.widget.ConstraintLayout>